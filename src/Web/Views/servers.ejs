<%- include('./Blocks/Header.ejs', { Mythical, user, Page, Redirect: "/me" }) %>
<link rel="stylesheet" href="https://mythicalbots.xyz/css/bots.css">

<% if(Data) { %>
<center>
<br>
<h5 class="sub">All of our current approved servers.</h5>
</center>

<div class="container">
	
		<div class="block-center">
      
      <% for(var i=0; i < Data.length; i++) { %>
			
			<div class="card server-block level1">
			  <div class="card-body">
        <% if(Data[i].status === "Featured") { %>
			  <span class="badges2" style="background: gold">Featured</span>
          <% } else if(Data[i].status === "Official") { %>
			  <span class="badges1" style="background: #89cff0">Official</span>
          <% } else { %>
        <span class="badges0">normal</span>
          <% } %>
			  <div>
			  	<a href="/server/<%= Data[i].id %>"><img class="card-avatar" src="<%= Data[i].iconURL %>" onerror="this.onerror=null;this.src='https://i.imgur.com/2otMem9.png';"></a>
			  </div>
			    <h5 class="card-title" title="<%= Data[i].name %>"><%= Data[i].name %></h5>
           <!-- <p class="card-title" id="status-"></p> -->
			    <p class=""><div class="le card-text description"><center><%- Data[i].desc %></center></div></p>
			    <div class="server-bottom">
				    <span class="members"><i class="fas fa-server"></i><%= Data[i].members %></span>
				    <a href="/server/<%= Data[i].id %>/invite" class="btn btn-success join" rel="nofollow" target="blank">Join Server</a>
				    <a href="/server/<%= Data[i].id %>" style="background:#b2c8d2" class="btn btn-r info"><i class="fas fa-info" style="padding:0;"></i></a>
				</div>
			  </div>
			</div>
      
      <% } %>

			
			  </div>
			</div>
<% } else { %>
<center>
<br>
<h5 class="sub">Sorry no servers were found. <br> This might be a code issue please contact an admin.</h5>
</center>
<% } %>

<%- include('./Blocks/Footer.ejs') %>