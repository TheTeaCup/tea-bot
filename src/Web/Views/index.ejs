<center>
<h1>TeaBot - Servers</h1>
<br>
<br>

  <!-- Redo welcome  -->
<center>
<h5 class="sub">Find the best server for your time!<% if(user){ %><br>Welcome, you are signed in as <%= user.username %>. <% } %></h5>
</center>
<br>
  
 <!--Search bar for bots-->
<form action="/search" method="GET">
<input class="input" type="text" id="searchbar-front" name="q"  placeholder="Search for a server by a name">
<noscript><button id="submit-btn">Submit</button></noscript>
</form>
</center>
<br>

  <% if(Cert) { %>
<center>
<br>
<h5 class="sub">Official Servers</h5>
</center>

<div class="container">
	
		<div class="block-center">
      
      <% for(var i=0; i < Cert.length; i++) { %>
			
			<div class="card server-block level1">
			  <div class="card-body">
       
			  <div>
			  	<a href="/server/<%= Cert[i].id %>"><img class="card-avatar" src="<%= Cert[i].iconURL %>" onerror="this.onerror=null;this.src='https://i.imgur.com/2otMem9.png';"></a>
			  </div>
			    <h5 class="card-title" title="<%= Cert[i].name %>"><%= Cert[i].name %></h5>
            <p class="card-title" id="status-<%- Cert[i].color %>"><%- Cert[i].presence %></p>
			    <p class=""><div class="le card-text description"><%- Cert[i].desc %></div></p>
			    <div class="server-bottom">
				    <span class="members"><i class="fas fa-server"></i><%= Cert[i].members %></span>
				    <a href="/bot/<%= Cert[i].id %>/invite" class="btn btn-success join" rel="nofollow" target="blank">Invite</a>
				    <a href="/bot/<%= Cert[i].id %>" style="background:#b2c8d2" class="btn btn-r info"><i class="fas fa-info" style="padding:0;"></i></a>
				</div>
			  </div>
			</div>
      
      <% } %>

			
			  </div>
			</div>
<br><hr>
<% }  else { %>
<center>
<br>
<h5 class="sub">Sorry no Verified Servers were found. <br> This might be a code issue please contact an admin.</h5>
</center><hr>
<% } %>

